doctype html
html
  head
    title Book bingo
    link(rel='stylesheet' href='/components/bootstrap/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
  
    // nav bar
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='/') Book Bingo
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          if user
            li.nav-item
              a.nav-link(href='/books/add') Add Book
        ul.navbar-nav.navbar-right
          if user
            li.nav-item
              a.nav-link(href='/users/logout') Sign Out
          else
            li.nav-item
              a.nav-link(href='/users/register') Sign Up
            li.nav-item
              a.nav-link(href='/users/login') Sign In
    
    br
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy 2020
        
    script(src='/javascripts/jquery-3.5.1.min.js')
    script(src='/javascripts/main.js')
    script(src='/components/bootstrap/js/bootstrap.min.js')
