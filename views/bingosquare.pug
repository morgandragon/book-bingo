extends layout

block content
  h1= bingosquare.name
  p= bingosquare.description
  p #[strong Hard Mode:] #{bingosquare.hardmode}
  - if (bingosquareuser.selectedbook)
    p #[strong Selected Book:] #{bingosquareuser.selectedbook}
  
  h3 Potential Books for This Square
  ul.list-group
    each book, i in books
      li.list-group-item
        a(href='/#')= book.title
